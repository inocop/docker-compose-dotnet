    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "publish",
            "command": "dotnet publish --runtime centos.7-x64 --output bin/publish && docker exec dockerdotnet_web_1 systemctl restart dotnet.service",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}